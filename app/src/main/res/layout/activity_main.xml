<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:gravity="center"
        android:text="Hello World!" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/AndriveLaneView"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/text1"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"

        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:text="Connect bluetooth" />

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="18dp"
        android:gravity="bottom"
        android:text="Messages received:"
        android:textColor="@android:color/holo_green_light"
        android:textColorHighlight="@color/colorAccent"
        tools:background="@color/colorAccent" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/fab"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="75dp"
        android:text="Manual Driving" />

    <Button
        android:id="@+id/start_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonC"
        android:layout_alignStart="@+id/fab"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="Start" />

    <Button
        android:id="@+id/stop_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_main"
        android:layout_alignStart="@+id/fab"
        android:text="Stop" />

</RelativeLayout>